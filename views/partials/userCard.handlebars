<div id="userCard">
    {{#if id}}
        <div>
            <img src={{#if image_url}}{{image_url}}{{else}}"./assets/user_white.png"{{/if}} alt="" />
            <h3>{{first_name}} {{last_name}}</h3>
            <p>{{#if quote }}"{{quote}}"{{/if}}</p>
            <div class="flexDiv">
                <a href="/profile"><button class="log"> Edit profile </button> </a>
                <form action="/logout" method="GET"><input class="log" type="submit" value=" Log out " /></form>
            </div>
        </div>
    {{else}}
        <div>
            <img src="./assets/user_white.png" alt="" />
            <h3>Guest user</h3>
            <form action="/login" method="POST">
                <div>
                    <p>{{#if error_email_login}}<font color="red">Wrong email!</font>{{/if}}</p>
                    <p>email: <input name="email" placeholder=" example@email.com" /></p>
                    <p>{{#if error_password_login}}<font color="red">Wrong password!</font>{{/if}}</p>
                    <p>password: <input id="password" type="password" name="password" placeholder=" password" /></p>
                </div>
                <input class="log" type="submit" value=" Log in " />
            </form>
        </div>
    {{/if}}
</div>